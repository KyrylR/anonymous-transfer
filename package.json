{
  "name": "anonymous-transfer",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Kyryl R",
  "description": "Usage of ZKP and SMT technologies for anonymous transfers",
  "scripts": {
    "prepare": "husky",
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.ts",
    "clean": "npx hardhat clean",
    "prepare-for-tests": "npx hardhat zkit make && npx hardhat zkit verifiers",
    "test": "npx hardhat test",
    "test-all": "npm run prepare-for-tests && npm run test",
    "private-network": "npx hardhat node",
    "generate-types": "TYPECHAIN_FORCE=true npx hardhat typechain",
    "solhint-check": "solhint \"./contracts/**/*.sol\"",
    "lint-fix": "npm run lint-sol-fix && npm run lint-ts-fix && npm run lint-json-fix && npm run solhint-check",
    "lint-json-fix": "prettier --write \"./**/*.json\"",
    "lint-ts-fix": "prettier --write \"./**/*.ts\"",
    "lint-sol-fix": "prettier --write \"contracts/**/*.sol\""
  },
  "dependencies": {
    "@openzeppelin/contracts": "5.1.0",
    "@openzeppelin/contracts-upgradeable": "5.1.0",
    "@solarity/circom-lib": "0.1.3",
    "@solarity/solidity-lib": "2.7.11",
    "circomlib": "^2.0.5"
  },
  "devDependencies": {
    "@iden3/js-crypto": "^1.1.0",
    "@iden3/js-iden3-core": "^1.4.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@solarity/chai-zkit": "^0.2.5",
    "@solarity/hardhat-gobind": "^1.2.2",
    "@solarity/hardhat-habits": "^1.0.1",
    "@solarity/hardhat-markup": "^1.0.8",
    "@solarity/hardhat-migrate": "^2.1.10",
    "@solarity/hardhat-zkit": "^0.4.9",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "@types/node": "^18.16.0",
    "@types/snarkjs": "^0.7.8",
    "chai": "^4.5.0",
    "circomlibjs": "^0.1.7",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.2",
    "hardhat": "^2.22.10",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.2.1",
    "husky": "^9.1.6",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "solhint": "^5.0.3",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.13",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.3.2",
    "typescript": "^5.6.3"
  }
}
